<%= form_with model: [:admin, project], data: { controller: "" , turbo: false } do |f| %>
  <div class="field field--check-box">
    <header class="field__header">
      <%= f.label :private, "Is this a private project?", class: "field__label t-label" %>
      <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:private] } %>
    </header>
    <div class="toggle-switch">
      <span class="toggle-switch__label toggle-switch__label--off field__label t-label">No</span>
      <%= f.check_box :private, checked: project.private, class: "toggle-switch__input" %>
      <%= f.label :private, class: "toggle-switch__container toggle" do %>
        <span class="toggle-switch__slider toggle__slider"></span>
      <% end %>
      <span class="toggle-switch__label toggle-switch__label--on field__label t-label">Yes</span>
    </div>
  </div>

  <div class="field">
    <%= f.label :project_image, class: "field__label t-label" %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:project_image] } %>
    <%= f.file_field :project_image, label: "Project Cover Image", as: :file, class: "field__input" %>
  </div>

  <div class="field">
    <%= f.label :title, class: "field__label t-label" %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:title] } %>
    <%= f.text_field :title, autofocus: true, required: true, min: 2, max: 100, class: "field__input" %>
  </div>

  <div class="field">
    <%= f.label :description, class: "field__label t-label" %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:description] } %>
    <%= f.textarea :description, required: false, min: 2, max: 1000, placeholder: "Explain a bit about your project", class: "field__input" %>
  </div>

  <div class="field">
    <%= f.label :project_images, class: "field__label t-label" %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:project_images] } %>
    <%= f.file_field :project_images, as: :file, multiple: true, class: "field__input" %>
  </div>

  <div class="field field--check-box">
    <header class="field__header">
      <%= f.label :image_carousel, "Do you want a carousel for project images?", class: "field__label t-label" %>
      <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:image_carousel] } %>
    </header>
    <div class="toggle-switch">
      <span class="toggle-switch__label toggle-switch__label--off field__label t-label">No</span>
      <%= f.check_box :image_carousel, checked: project.image_carousel, class: "toggle-switch__input" %>
      <%= f.label :image_carousel, class: "toggle-switch__container toggle" do %>
        <span class="toggle-switch__slider toggle__slider"></span>
      <% end %>
      <span class="toggle-switch__label toggle-switch__label--on field__label t-label">Yes</span>
    </div>
  </div>

  <div class="field">
    <%= f.label :company, class: "field__label t-label" %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:company] } %>
    <%= f.text_field :company, autofocus: true, required: false, min: 2, max: 100, class: "field__input" %>
  </div>

  <section class="field-section field-section--datetime">
    <span class="field-section__label t-label">Date</span>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:start_date] } %>
    <%= render partial: "shared/forms/field_error", locals: { errors: project.errors[:end_date] } %>
    <div class="field-group field-group--range field-group--2-col">
      <div class="field">
        <%= f.date_field :start_date, required: true, value: project.start_date&.strftime("%Y-%m-%d"), class: "field__input" %>
      </div>
      <div class="field">
        <%= f.date_field :end_date, required: false, value: project.end_date&.strftime("%Y-%m-%d"), class: "field__input" %>
      </div>
    </div>
  </section>

  <div class="field">
    <%= f.label :link, class: "field__label t-label" %>
    <%= f.url_field :link, required: false, class: "field__input" %>
  </div>

  <div class="form__actions">
    <%= f.submit "Create Project", class: "btn btn--primary" %>
  </div>
<% end %>
