<%= simple_form_for model, method: verb, url: url do |f| %>
  <div class="form-inputs">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :private, label: 'Private Project?' %>
      <%= f.input :project_image, label: "Project Cover Image", as: :file %> <hr>
      <%= f.input :title, label: "Project Name" %>
      <%= f.input :description, label: "Project description", input_html: {rows: 8}%>
      <%#= f.input :project_date, html5: true %>
      <%#= f.input :client, label: "Client"%>
      <%#= f.input :category, label: "Category"%>
      <%= f.input :link, label: "Github Link"%>
      <%#= f.input :demoLink, label: "Demo Link"%>
      <%= f.file_field :project_images, as: :file, multiple: true%><hr>

  </div>
  <div class="form-actions">
    <div class="form-button">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
