<div class="main-container">
  <%= turbo_frame_tag "portfolio" do %>
    <% if @projects.empty? %>
        <div class="page-title">
            <h5>I am currently working on projects...</h5>
            <div class="about-links">
                <div class="basic-btn">
                    <%#= link_to "DOWNLOAD RESUME", "/koto_uchida_cv_2025.pdf", target: :blank  %>
                </div><br>
                <div class="social-links">
                    <a href="http://www.github.com/kotomyrau" class="fa fa-github" target='blank'></a>
                    <a href="https://www.linkedin.com/in/kotomyra-uchida/" class="fab fa-linkedin" target='blank'></a>
                    <a href="mailto:kotomairau@gmail.com" class="fas fa-envelope-square"></a>
                </div>
            </div>
        </div>
    <% else %>
        <div class="page-title">
            <h5>ALL PROJECTS</h5>
            <% if @projects.count < 2 %>
                <p><%= @projects.count %> project</p>
            <% else %>
                <p><%= @projects.count %> projects</p>
            <% end %>
        </div>
        <div class="mySkills-btn" id="viewBy-skills">
          <% if @programmes.present? %>
              <p>View by Skill:</p>
              <% @programmes.each do |programme| %>
                  <% if programme.project_programme_ids.empty? == false %>
                      <%= link_to programme.name, programme_path(programme) %>
                  <% end %>
              <% end %>
          <% end %>
        </div>
        <div class="grid-container-index" id="projectAll">
            <% @projects.each_with_index do |project, index| %>
                <div class="project-card" id="pro<%= index %>">
                    <%= link_to (cl_image_tag  project.project_image.key, overflow: :hidden), project_path(project) %>
                        <div class="project-card-text">
                            <h6> <%= project.category %> </h6>
                            <h5><%= link_to project.title, project_path(project) %></h5>
                                <div class="mySkills-btn" id="homeSkills">
                                    <% project.programmes.each do |programme| %>
                                        <%= link_to programme.name, programme_path(programme) %>
                                    <% end %>

                                </div>
                        </div>
                </div>
            <% end %>
        </div>
    <% end %>
  <% end %>
</div>

